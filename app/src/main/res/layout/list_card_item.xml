<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linear_list_card_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:stackHeaderHeight="160dp">

    <FrameLayout
        android:id="@+id/frame_list_card_item"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/shape_rectangle_with_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_tmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/textView2"
                android:text="21"
                android:textColor="@color/white"
                android:textSize="60sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_tmp"
                android:layout_alignBottom="@+id/tv_tmp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp"
                android:text="℃"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="杭州"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_marginStart="30dp"/>

            <TextView
                android:id="@+id/tv_cond_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="晴"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="30dp"
                android:text="2017-10-25 12:34"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/container_list_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>


        <LinearLayout style="@style/style_card__ll_item">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体感温度"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="23℃"
                android:gravity="end"/>

        </LinearLayout>

        <View style="@style/style_card_div"/>

        <LinearLayout style="@style/style_card__ll_item">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风向"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_wind_dir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="西北"
                android:gravity="end"/>

        </LinearLayout>

        <View style="@style/style_card_div"/>

        <LinearLayout style="@style/style_card__ll_item">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风力"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_wind_sc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3"
                android:gravity="end"/>

        </LinearLayout>

        <View style="@style/style_card_div"/>

        <LinearLayout style="@style/style_card__ll_item">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风速"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_wind_spd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15"
                android:gravity="end"/>

        </LinearLayout>

        <View style="@style/style_card_div"/>

        <LinearLayout style="@style/style_card__ll_item">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相对湿度"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_hum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40"
                android:gravity="end"/>

        </LinearLayout>

        <View style="@style/style_card_div"/>

        <LinearLayout style="@style/style_card__ll_item">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="降水量"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_pcpn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="end"/>

        </LinearLayout>

        <View style="@style/style_card_div"/>

        <LinearLayout style="@style/style_card__ll_item">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大气压强"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_pres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1020"
                android:gravity="end"/>

        </LinearLayout>

        <View style="@style/style_card_div"/>

        <LinearLayout style="@style/style_card__ll_item">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="能见度"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_vis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10"
                android:gravity="end"/>

        </LinearLayout>

        <View style="@style/style_card_div"/>

        <LinearLayout style="@style/style_card__ll_item">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="云量"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_cloud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="23"
                android:gravity="end"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>